{
  "preset": "ts-jest/presets/default-esm",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ],
    "^.+.(png|svg|jpg|gif|webp)$": "jest-transform-stub"
  },
  "passWithNoTests": true,
  "extensionsToTreatAsEsm": [
    ".ts",
    ".tsx"
  ],
  "testRegex": ".(spec|test).(ts|tsx)$",
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "./src/**/*.{ts,tsx}",
    "!**/index.{ts,tsx}"
  ]
}
